[Unit]
Description=nexus3 - private repository
After=network.target remote-fs.target nss-lookup.target

[Service]
User=root
Type=forking
Environment=JAVA_HOME=/usr/local/jdk
ExecStart=DATA_DIR/nexus/nexus-3.28.1-01/bin/nexus start
ExecReload=DATA_DIR/nexus/nexus-3.28.1-01/bin/nexus restart
ExecStop=DATA_DIR/nexus/nexus-3.28.1-01/bin/nexus stop

[Install]
WantedBy=multi-user.target
